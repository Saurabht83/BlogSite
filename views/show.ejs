<% include partials/header %>

<div class ="ui main text segment container">  

       <div class = "ui huge header"> <%= blog.title  %> </div>
       <div class = "item">
        <img class= "ui image centered rounded" src= "<%= blog.image  %>" alt= "<%= blog.title %>"> 
        </div>
        <div class= "content">
        <p><%=  blog.created.toDateString() %> </p>
        </div>
        <div class = "description"> 
        <p><%=  blog.description  %>  </p>
        </div>
        <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method ="POST"> 
             <button class="ui red basic button">Delete </button>
        </form>
        <a href= "/blogs/<%= blog._id %>/edit" class = "ui orange basic button">Edit </a>

</div>

<a class = "ui button green basic" href = "/blogs">Go Back  </a>


<% include partials/footer %>
