<% include partials/header %>
 
  <div class = "ui main text container"> 
           <div class = "ui huge header"> <h1>Blog Site</h1> </div>
      
            <div class ="ui attached top segment">   
                        <div class = "ui divided items">
                      
                                 <% blogs.forEach(function(blog){  %>
                                 <div class = "item"> 
                                        <div class = "image">
                                      
                                            <img  src= "<%= blog.image  %>" alt= "<%= blog.title %>"  >
                                       
                                       </div>
                                       
                                       <div class = "content">  
                                            <a  href = "/blogs/<%=blog._id %>" > <%= blog.title %>  </a>
                                            <div class = "meta">  
                                            
                                                 <span><%=  blog.created.toDateString()  %> </span>
                                            
                                            </div>
                                            <div class = "description">
                                             
                                                 <p><%- blog.description.substring(0, 100)  %> ... </p>
                                             
                                            </div>
                                            
                                            <div class = "extra">
                                             
                                                  <a class = "ui button green floated" href = "/blogs/<%=blog._id %>">Read More 
                                                  <i class="right chevron icon">  </i>
                                                  </a>
                                              
                                            </div>
                                   
                                   
                                  
                                
                                       </div>
                               </div>
                              <% }); %>
                    
                       
                       </div>
            </div>     
             
   </div>    
  
   <a class="ui purple basic button" href = "/blogs/new">Create New Blog</a>

<% include partials/footer %>
